#!/usr/bin/env bash

if [ -z "$DATA_DIR" ]; then
  echo "DATA_DIR environment variable must be set"
  exit 1
fi

APP_DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd .. && pwd )
export LD_LIBRARY_PATH=${APP_DIR}/php/lib:${APP_DIR}/postgresql/lib
${APP_DIR}/php/bin/php -c ${DATA_DIR}/config/php/php.ini $@
